<% layout("/layouts/boilaplate") %>
<body>
    <br><br>
    <div class="row">
    <div class="col-8 offset-2">
    <h3>Create a new listing</h3><br>
    <form action="/listing" method="post" novalidate class="needs-validation">
        <div>
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" type="text" placeholder="Enter the title" class="form-control" required>
        </div>
        <br>
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" type="text" placeholder="Enter the description" class="form-control" required></textarea>
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" type="number" placeholder="Enter the price" class="form-control" required>
        </div>
        
        <div class="mb-3 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" type="text" placeholder="Enter the location" class="form-control" required>
        </div>
        </div>
        
        
        <div>
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" type="text" placeholder="Enter the country" class="form-control" required><br /> <br>
        </div>
        
        <button class="btn btn-dark btn-c">Create</button>
        <br><br>
    </form>
    </div>
    </div>
</body>
