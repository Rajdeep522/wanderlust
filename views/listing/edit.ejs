<% layout("/layouts/boilaplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-1">
    <h3>Create a new listing</h3><br>
    <form action="/listing/<%=listing._id %>?_method=PUT" method="post">
        
        <div>
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" type="text" class="form-control" value="<%= listing.title %>" placeholder="Enter the title">
        </div>
        
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" type="text" class="form-control" placeholder="Enter the description"><%= listing.description %></textarea>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" type="number" class="form-control" value="<%= listing.price %>" placeholder="Enter the price">
            </div>
        
            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" type="text" class="form-control" value="<%= listing.location %>" placeholder="Enter the location">
            </div>
        </div>
        
        <div>
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" type="text" class="form-control" value="<%= listing.country %>" placeholder="Enter the country">
        </div>
        
        <button class="btn-dark btn mt-3">Update</button>
    </form>
        </div>
    </div>
    
</body>
